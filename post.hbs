{{!< default}}

<main class="post__main" role="main">
  <a class="post__header" href="{{@blog.url}}">
    {{@blog.title}}
  </a>
  
  {{#post}}
    <article class="{{post_class}}">
      <div class="post__meta">
        <time datetime="{{date format="YYYY-MM-DD"}}">{{date format='MMMM DD, YYYY'}}</time> 
        {{#if tags}}in {{tags separator=" | "}}{{/if}}
      </div>
      
      <h1 class="post__title" {{#if author}}style="background-image: url({{author.cover}})"{{/if}}>{{{title}}}</h1>
      
      <section class="post__content">
        {{content}}
      </section>
      
      <div class="post__footer">
        <section class="post__footer__inner">
          <h4>Share</h4>
          <br />
          <a href="http://twitter.com/share?text={{title}}&url={{url absolute="true"}}"
          onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;">Twitter</a>
          |
          <a href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}"
          onclick="window.open(this.href, 'facebook-share','width=580,height=296');return false;">Facebook</a>
          
          {{> footer this }}
        </section>
      </div>
    </article>
  {{/post}}
</main>